@model IEnumerable<Commercial.Models.MasterViewModel>

@{
    ViewBag.Title = "Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top: 25px; margin-bottom: 25px;">
    <div class="col-md-12">
        <h3>Master List</h3>
        <div class="float-right" style="margin-bottom:5px">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-sm" })
        </div>
        <table class="table table-striped table-bordered" id="mastertable">
            <thead style="text-align: center">
                <tr>
                    <th>Bank</th>
                    <th>Supplier</th>
                    <th>LC No</th>
                    <th>LC Date</th>
                    <th>Address</th>
                    @*<th>IRC No</th>
                    <th>PI No</th>*@
                    <th>Total Amount</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="tableBody" style="text-align: center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BankName</td>
                        <td>@item.SupplierName</td>
                        <td>@item.LCNo</td>
                        <td>@item.LCDate.ToString("dd MMM yyyy")</td>
                        <td>@item.Address</td>
                        <td>@item.TotalAmount</td>
                        <td>
                            <a class="btn btn-info btnde2" href="@Url.Action("Edit","Master", new { id = item.Id })"><i class="fas fa-edit"></i></a>
                            <a class="btn btn-outline-warning" href="@Url.Action("ViewReport","Master", new { id = item.Id })" target="_blank"><i class="far fa-eye"></i></a>
                            <a class="btn btn-danger" href="@Url.Action("Delete","Master", new { id = item.Id })"><i class="fas fa-trash-alt"></i></a>

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#mastertable').DataTable();
        });

        $('#mastertable').DataTable({
            responsive: true
        });


    </script>
}

