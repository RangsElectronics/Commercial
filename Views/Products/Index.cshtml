@model IEnumerable<Commercial.tblProduct>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top: 25px; margin-bottom: 25px;">
    <div class="col-md-12">
        <h3>Product List</h3>
        <div class="float-right" style="margin-bottom:5px">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-sm" })
        </div>
        <table class="table table-striped table-bordered" id="producttable">
            <thead style="text-align: center">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="tableBody" style="text-align: center">
                @foreach (tblProduct item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <a class="btn btn-info btnde2" href="@Url.Action("Edit","Products", new { id = item.Id })"><i class="fas fa-edit"></i></a>
                            <a class="btn btn-danger" href="@Url.Action("Delete","Products", new { id = item.Id })"><i class="fas fa-trash-alt"></i></a>

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#producttable').DataTable();
        });

        $('#producttable').DataTable({
            responsive: true
        });


    </script>
}